{
  "name": "setup-dotfiles",
  "type": "commonjs",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "devEngines": {
    "node": "12.x || 13.x || 14.x"
  },
  "scripts": {
    "start": "node src/",
    "setup-mac": "node src/setup-mac/",
    "lint": "eslint --ignore-path .gitignore --ext .js .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel lint check-format"
  },
  "devDependencies": {
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1"
  }
}
